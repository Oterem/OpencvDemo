<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="omri.opencvdemo.MainActivity">

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteY="101dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressbar_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="launchCamera"
        android:text="@string/take_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pic1" />

    <Button
        android:id="@+id/browse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/analyze_btn"
        android:layout_alignBottom="@+id/analyze_btn"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/analyze_btn"
        android:onClick="onBrowseClick"
        android:text="@string/browse"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="157dp" />

    <Button
        android:id="@+id/analyze_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/camera_btn"
        android:layout_alignBottom="@+id/camera_btn"
        android:layout_alignEnd="@+id/pic1"
        android:onClick="onAnalyzeClick"
        android:text="@string/analyze"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="262dp" />

    <Button
        android:id="@+id/hostogram_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onHistogramClicked"
        android:text="@string/show_histogram"
        android:layout_below="@+id/camera_btn"
        android:layout_alignStart="@+id/camera_btn"
        android:layout_marginTop="11dp" />


</android.widget.RelativeLayout>